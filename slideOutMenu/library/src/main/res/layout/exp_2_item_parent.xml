<?xml version="1.0" encoding="utf-8"?>
<mxh.kickassmenu.menucontent.containers.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/exp_section_ripple_wrapper_click"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/sectionNormalHeight"
    android:layout_margin="0dp"
    android:padding="0dp"
    app:mrlsxm_rippleColor="#ffa2a2a2"
    app:mrlsxm_rippleHover="true"
    app:mrlsxm_rippleOverlay="true">

    <RelativeLayout
        android:id="@id/exp_section_adjustment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal"
        android:padding="0dp">
        <!-- android:foreground="?android:attr/selectableItemBackground"
        -->
        <TextView
            android:id="@id/exp_section_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/exp_section_notification_number"
            android:layout_toStartOf="@id/exp_section_notification_number"
            android:lines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sectionSize"
            android:textAlignment="textStart"
            android:text="sample menu item parent" />

        <TextView
            android:id="@id/exp_section_notification_number"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/exp_indication_arrow"
            android:maxLength="5"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sectionNotificationSize"
            android:textStyle="bold"
            android:text="(99)"
            android:elegantTextHeight="false"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textAlignment="center" />

        <ImageView
            android:id="@id/exp_indication_arrow"
            android:layout_width="@dimen/sectionSquareIconSize"
            android:layout_height="@dimen/sectionSquareIconSize"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/sectionRowMarginHorizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_right"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</mxh.kickassmenu.menucontent.containers.MaterialRippleLayout >

